<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200pt"
        android:gravity="center">

        <ImageView
            android:id="@+id/ImageViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/DescCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/ButtonPrevCountry"
            android:text="@string/buttonPrev"
            android:onClick="prevCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/ButtonNextCountry"
            android:text="@string/buttonNext"
            android:onClick="nextCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>